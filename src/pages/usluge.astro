---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import washingMachine from "@images/ves_masina.avif";
import personWorking from "@images/person-working.avif";
import smallAppliances from "@images/mali-kucni-aparati.avif";
import electroInstalation from "@images/elektro-instalacija.avif";
import aerialView from "@images/before-after.avif";
import fuses from "@images/automatski-osiguraci.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Popravka bele tehnike i grejnih tela",
    subTitle:
      "U Sremskoj Mitrovici pružamo profesionalni servis bele tehnike i grejnih tela. Naš iskusni električar dolazi na vašu adresu, identifikuje kvar i vrši potrebne popravke. Ako je neophodno, uređaje odvozimo u servis za detaljniju dijagnostiku i popravku. Popravljamo širok spektar uređaja, uključujući: veš mašine, frižidere, šporete, rerne, bojlere, mikrotalasne pećnice, grejalice",
    single: false,
    imgOne: washingMachine,
    imgOneAlt: "Blueprints and digital tablet with construction plans.",
    imgTwo: personWorking,
    imgTwoAlt: "Person working in the office",
  },
  {
    isRightSection: false,
    title: "Popravka malih kućnih aparata",
    subTitle:
      "Vršimo popravku malih kućnih aparata kao što su pegle, usisivači, mikseri, fenovi za kosu, stoni lampe i drugi uređaji. Naš stručni tim pruža brzu i pouzdanu uslugu, osiguravajući da vaši aparati ponovo rade besprekorno. Kontaktirajte nas za sve vrste popravki malih kućnih aparata u Sremskoj Mitrovici.",
    img: smallAppliances,
    imgAlt: "Construction site before and after",
    btnExists: false,
  },
  {
    isRightSection: true,
    title: "Izrada nove i popravka stare instalacije",
    subTitle:
      "Ukoliko imate problem sa elektro instalacijom ili vam je potrebna nova instalacija, pozovite nas. Naš stručni tim dolazi na vašu adresu na teritoriji grada Sremska Mitrovica u najkraćem mogućem roku. Pružamo pouzdanu i efikasnu uslugu, bilo da je reč o popravci postojeće ili postavljanju nove instalacije. Kontaktirajte nas za sve vaše potrebe u vezi sa elektro instalacijama.",
    single: false,
    imgOne: electroInstalation,
    imgOneAlt: "Construction workers orchestrating a project",
    imgTwo: aerialView,
    imgTwoAlt: "Aerial view of managed construction",
  },
  {
    isRightSection: false,
    title: "Zamena razvodnih tabli, osigurača, montaža lampi",
    subTitle:
      "Vršimo zamenu topljivih osigurača automatskim. Automatski osigurači imaju mnogo prednosti u odnosu na topljive osigurače, uključujući jednostavniju upotrebu i niže troškove. Takođe, nudimo zamenu kompletnih razvodnih tabli i šemiranje, kao i montažu lampi. Naš stručni tim je spreman da vam pruži brzu i pouzdanu uslugu na teritoriji Sremske Mitrovice. Kontaktirajte nas za sve vaše potrebe vezane za elektro instalacije i osvetljenje.",
    img: fuses,
    imgAlt:
      "Man in orange and black vest wearing white helmet holding yellow and black power tool",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://elektrosrem.rs/usluge",
    "url": "https://elektrosrem.rs/usluge",
    "name": "Elektricar Sremska Mitrovica | Elektrosrem",
    "description": "Uniting expertise with your vision, ScrewFast provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://elektrosrem.rs",
        "name": "ElektroSrem",
        "description": "Nudimo usluge iz oblasti elektrike, održavanje i izrada elektro instalacije jake i slabe struje, servis bele tehnike i malih kućnih aparata, ugradnja video nadzora..."
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Usluge koje nudimo"
    subTitle="Firma Elektrosrem iz Sremske Mitrovice posvećena je pružanju širokog spektra usluga u oblasti elektroinstalacija. Bez obzira da li vam je potrebna popravka, instalacija novih uređaja ili redovno održavanje, tu smo da pomognemo. Ponosimo se pažnjom prema detaljima, brzim odzivom i visokim standardima kvaliteta."
    btnExists={true}
    btnTitle="Kontaktirajte nas"
    btnURL="/ElektroSrem/kontakt"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="Naši Rezultati"
    subTitle="Naša posvećenost kvalitetu i pouzdanosti očigledna je u svakom projektu koji preuzimamo. U Elektrosremu, posvećeni smo pružanju usluga koje nadmašuju industrijske standarde i osiguravaju dugotrajnu funkcionalnost vaših elektro instalacija i uređaja."
    mainStatTitle="96%"
    mainStatSubTitle="naših klijenata ocenjuje svoje iskustvo sa Elektrosremom kao izuzetno"
    stats={[
      {
        stat: "98%",
        description: "uspešno završenih projekata",
      },
      {
        stat: "300+",
        description: "uspešno obavljenih instalacija",
      },
      {
        stat: "200+",
        description: "zadovoljnih mušterija",
      },
    ]}
  />
</MainLayout>
